/* css for all elements '*', including '::before' and '::after' pheudo-elements */

:root {
  /* grey base colors */
  --clr-base: #666;
  --clr-base-lt: #999;
  --clr-base-dk: #333;
}

:root[color-scheme="light"] {
  --clr-bg: var(--clr-base-lt);
}

:root[color-scheme="dark"] {
  --clr-bg: var(--clr-base-dk);
}

.Navigation {
  display: flex;
  flex-flow: column;
  overflow-y: auto;
  height: 100vh;
}

.NavigationMuiAppBar {
  position: absolute;
  z-index: 1;
  background-color: var(--clr-bg);
  opacity: 0.9;
  animation-name: header;
  animation-duration: 0.05s;
}

.NavigationBody {
  flex-grow: 1;
  background-color: var(--clr-base);
}

.NavigationFooter {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  padding: 5px;
  padding-left: 15px;
  padding-right: 15px;
  background-color: var(--clr-bg);
}
